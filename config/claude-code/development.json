{
  "mcpServers": {
    "windows-build-server": {
      "type": "stdio",
      "command": "node",
      "args": ["./server/src/server.js"],
      "env": {
        "MCP_SERVER_PORT": "8080-8089",
        "ALLOWED_BUILD_PATHS": "C:\\builds\\",
        "COMMAND_TIMEOUT": "60000",
        "SSH_TIMEOUT": "10000",
        "RATE_LIMIT_REQUESTS": "1000",
        "RATE_LIMIT_WINDOW": "60000",
        "ENABLE_DEV_COMMANDS": "true",
        "ENABLE_DANGEROUS_MODE": "true",
        "LOG_LEVEL": "debug",
        "LOG_ROTATION_SIZE": "52428800",
        "LOG_ROTATION_FILES": "10",
        "DEV_COMMAND_PATHS": "C:\\builds\\",
        "REMOTE_USERNAME": "dev-user",
        "REMOTE_PASSWORD": "encrypted-dev-password",
        "NORDVPN_ENABLED": "true",
        "NORDVPN_HOSTS": "10.5.0.2,10.5.0.3"
      }
    }
  }
}
{
  "mcpServers": {
    "windows-build-server": {
      "type": "stdio",
      "command": "node",
      "args": ["./server/src/server.js"],
      "env": {
        "MCP_AUTH_TOKEN": "project-specific-token",
        "MCP_SERVER_PORT": "8080",
        "ALLOWED_BUILD_PATHS": "C:\\projects\\current-project\\;C:\\builds\\current-project\\",
        "COMMAND_TIMEOUT": "30000",
        "RATE_LIMIT_REQUESTS": "100",
        "RATE_LIMIT_WINDOW": "60000",
        "ENABLE_DEV_COMMANDS": "true",
        "ENABLE_DANGEROUS_MODE": "false",
        "LOG_LEVEL": "debug",
        "DEV_COMMAND_PATHS": "C:\\projects\\current-project\\;C:\\temp\\dev\\"
      }
    }
  }
}